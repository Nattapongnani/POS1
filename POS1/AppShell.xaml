<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="POS1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:POS1"
    FlyoutHeaderBehavior="CollapseOnScroll"
    FlyoutBehavior="{OnPlatform Android=Flyout, WinUI=Locked}"
    Shell.TabBarIsVisible="{OnIdiom Phone='True', Desktop='False'}"
    FlyoutBackdrop="Red"
    BackgroundColor="Blue"
    >

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Title="Equipment"
                      Icon="dotnet_bot.png"
                          ContentTemplate="{DataTemplate local:equipmentView}" />
        <ShellContent Title="Cart"
                      Icon="dotnet_bot.png"
                          ContentTemplate="{DataTemplate local:Cart}" />
    </FlyoutItem>

</Shell>
